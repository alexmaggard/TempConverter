<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maggard.tempconverter.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:id="@+id/degreesLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fahrenheit"
        android:id="@+id/fahrenheitLabel"
        android:layout_marginTop="58dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/degreesLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celcius"
        android:id="@+id/celciusLabel"
        android:layout_below="@+id/fahrenheitLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celciusResult"
        android:id="@+id/celciusResultLabel"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignTop="@+id/celciusLabel"
        android:layout_toRightOf="@+id/degreesLabel"
        android:layout_toEndOf="@+id/degreesLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fahrenheitEditText"
        android:textAlignment="center"
        android:text="0"
        android:layout_alignBottom="@+id/fahrenheitLabel"
        android:layout_alignLeft="@+id/degreesLabel"
        android:layout_alignStart="@+id/degreesLabel" />

</RelativeLayout>
